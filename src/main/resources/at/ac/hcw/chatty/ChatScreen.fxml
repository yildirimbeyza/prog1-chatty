<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.ac.hcw.chatty.controller.ChatScreenController">

    <top>
        <VBox>
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: #2563eb; -fx-padding: 15;">

                <VBox spacing="3">
                    <Label text="Chatty"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label fx:id="roomLabel" text="Room: ..."
                           style="-fx-font-size: 10px; -fx-text-fill: #bfdbfe;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Raum verlassen" onAction="#handleLeaveRoom"
                        style="-fx-background-color: #dc2626; -fx-text-fill: white;
                               -fx-font-size: 12px; -fx-font-weight: bold;
                               -fx-cursor: hand; -fx-padding: 8 15 8 15;"/>
            </HBox>

            <!-- Sticker Panel -->
            <HBox style="-fx-background-color: #f3f4f6; -fx-padding: 8;">
                <ScrollPane fitToHeight="true" hbarPolicy="NEVER"
                            style="-fx-background-color: transparent;">
                    <FlowPane fx:id="stickerPanel" hgap="5" vgap="5"
                              style="-fx-padding: 5;"/>
                </ScrollPane>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fx:id="chatScrollPane" fitToWidth="true"
                    style="-fx-background-color: white;">
            <VBox fx:id="chatContainer" spacing="10"
                  style="-fx-background-color: white; -fx-padding: 15;"/>
        </ScrollPane>
    </center>

    <bottom>
        <VBox>
            <HBox spacing="10" style="-fx-background-color: #e5e7eb; -fx-padding: 15;">
                <TextField fx:id="messageInput" promptText="Nachricht eingeben..."
                           onAction="#handleSend"
                           prefHeight="40" HBox.hgrow="ALWAYS"
                           style="-fx-font-size: 13px;"/>

                <Button text="Senden" onAction="#handleSend"
                        prefWidth="80" prefHeight="40"
                        style="-fx-background-color: #2563eb; -fx-text-fill: white;
                               -fx-font-size: 13px; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>

            <HBox alignment="CENTER" style="-fx-background-color: #d1d5db; -fx-padding: 8 15 8 15;">
                <Label fx:id="statusLabel" text="Status: Verbinde..."
                       style="-fx-font-size: 10px; -fx-text-fill: #6b7280; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>