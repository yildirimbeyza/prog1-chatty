<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f9fafb;"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.ac.hcw.chatty.controller.ConnectionScreenController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="ðŸ’¬" style="-fx-font-size: 48px;"/>
    <Label text="Chatty Advanced" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
    <Label text="Multi-Room Chat System" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>

    <Label text="ðŸ’¡ Tipp: Starte Server-Modus zuerst, dann Client-Modus"
           style="-fx-font-size: 11px; -fx-text-fill: #3b82f6; -fx-font-weight: bold;"/>

    <Separator prefWidth="450"/>

    <VBox spacing="10" alignment="CENTER">
        <Label text="Username" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
        <TextField fx:id="usernameInput" promptText="Dein Name"
                   prefWidth="400" style="-fx-font-size: 13px; -fx-padding: 10px;"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER">
        <Label text="Server Port" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
        <TextField fx:id="portInput" promptText="8080"
                   prefWidth="400" style="-fx-font-size: 13px; -fx-padding: 10px;"/>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <RadioButton fx:id="clientMode" text="Client-Modus (Rooms beitreten)"
                     style="-fx-font-size: 12px;"/>
        <RadioButton fx:id="serverMode" text="Server-Modus (Server starten)"
                     style="-fx-font-size: 12px;"/>
    </HBox>

    <Button text="Start" onAction="#handleStart"
            prefWidth="400" prefHeight="45"
            style="-fx-background-color: #2563eb; -fx-text-fill: white;
                   -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;"/>

    <Separator prefWidth="400"/>

    <Label text="Status: Nicht verbunden"
           style="-fx-font-size: 11px; -fx-text-fill: #6b7280;"/>
</VBox>